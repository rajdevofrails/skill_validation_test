<%= form_with(model: [invoice.company, invoice], local: true, multipart: true, class: "invoice-form") do |form| %>
  <div class="form-group">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category, class: "form-label" %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "form-label" %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :check_ids, "Associated Checks", class: "form-label" %>
    <%= form.collection_select :check_ids, @company.checks, :id, :number, { prompt: "Select Checks" }, { multiple: true, class: "form-control" } %>
  </div>

  <div class="form-actions">
    <%= form.submit "Upload Invoice", class: "btn-primary" %>
  </div>
<% end %>
